<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextLetter">
    <LinearLayout
        android:background="?themeBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            style="@style/menu_top_layout_small"
            android:onClick="backToMenu">
            <TextView
                android:id="@+id/menu"
                style="@style/textView_top_layout_small"/>
        </RelativeLayout>
        <LinearLayout
            style="@style/menu_top_layout_small">
            <TextView
                style="@style/textView_layout_letter_small_letter"/>
        </LinearLayout>
        <RelativeLayout
            style="@style/activity_contener"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp">
            <ImageView
                style="@style/activity_image"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/editText"
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:textSize="20dp"
                android:background="?txtColor"
                android:textColor="?themeBackgroundColor"
                android:inputType="text"
                android:gravity="center" />
            <TextView
                android:id="@+id/Correct"
                android:layout_marginTop="5dp"
                android:layout_width="300dp"
                android:layout_height="28dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?txtColor"
                android:gravity="center" />
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/Check"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:text="SPRAWDÅ¹"
                android:textSize="20dp"
                android:background="?txtColor"
                android:textColor="?themeBackgroundColor"
                android:onClick="checkPhrase"/>
        </LinearLayout>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>